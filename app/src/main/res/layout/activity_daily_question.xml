<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ss"
    tools:context=".DailyQuestion">

    <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:padding="15dp"
         android:text="Daily Question"
         android:textAlignment="center"
         android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
         android:textColor="#612623"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="302dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="282dp"
        android:layout_marginTop="147dp"
        android:padding="15dp"
        android:text="Information"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="#612623" />

    <Button
        android:id="@+id/continu"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/codeText"
        android:layout_marginBottom="187dp"
        android:layout_marginEnd="34dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/back_structure"
        android:backgroundTint="#612623"
        android:text="continue"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="15dp" />

    <Button
        android:id="@+id/back"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/codeText"
        android:layout_marginBottom="181dp"
        android:layout_marginEnd="268dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/back_structure"
        android:backgroundTint="@android:color/white"
        android:text="Back"
        android:textAllCaps="false"
        android:textColor="#612623"
        android:textSize="15dp" />


</RelativeLayout>